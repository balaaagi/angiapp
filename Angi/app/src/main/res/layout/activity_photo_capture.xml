<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    tools:context="me.balaaagi.angi.CaptureActivity"
    android:orientation="vertical">


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:drawableLeft="@mipmap/ic_launcher"
        android:text="Facial AUTHENTICATE "
        android:textColor="@color/colorAccent"
        android:id="@+id/clicktoAunthenticate"/>

    <com.flurgle.camerakit.CameraView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cameraAuthenticate"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_gravity="center_horizontal"
        android:adjustViewBounds="true"
        app:ckCropOutput="false"
        app:ckFacing="front"
        app:ckFlash="off"
        app:ckFocus="tapWithMarker"
        app:ckJpegQuality="100"
        app:ckMethod="standard" />

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:text="Capture Your Face to Authenticate"
        android:textStyle="italic"
        android:id="@+id/authenticateTextView"
        android:textSize="27dp"
        android:gravity="center"
        android:textColor="@color/colorPrimary"

        android:layout_height="wrap_content" />


</LinearLayout>
